pipeline {
    agent any

    stages {
        stage('test'){
            steps{
                script{
                    dir('./backend/cloudy'){
                        sh 'chmod +x ./gradlew'
                        sh './gradlew test'
                    }

                }

            }
        }


        stage('sonarqube') {
            steps {
                script {

                    withSonarQubeEnv('SonarQube') {

                        dir('./backend/cloudy') {
                            sh 'chmod +x ./gradlew'
                            sh './gradlew sonarqube -Dsonar.projectKey=S10P31S207'
                        }
                    }
                }
            }
        }
        stage('Results') {
            steps {
                // 테스트 결과 수집
                junit '**/test-results/**/*.xml'
            }
        }
    }
}
